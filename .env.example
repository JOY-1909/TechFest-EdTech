# YuvaSetu Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================

# Student Database (MongoDB)
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=yuva_setu

# Employer Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=yuvasetu

# Job Recommendation Engine Database
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=jobs
MONGODB_COLLECTION=narkuri_tech_jobs

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Secret (Generate a strong random key)
SECRET_KEY=your-super-secret-jwt-key-change-in-production

# ================================
# EMAIL CONFIGURATION (SMTP)
# ================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=your-email@gmail.com

# ================================
# GOOGLE OAUTH CONFIGURATION
# ================================

GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# ================================
# FIREBASE CONFIGURATION
# ================================

# Student Firebase Project
VITE_STUDENT_FIREBASE_API_KEY=your-student-firebase-api-key
VITE_STUDENT_FIREBASE_AUTH_DOMAIN=your-student-project.firebaseapp.com
VITE_STUDENT_FIREBASE_PROJECT_ID=your-student-project-id
VITE_STUDENT_FIREBASE_STORAGE_BUCKET=your-student-project.firebasestorage.app
VITE_STUDENT_FIREBASE_MESSAGING_SENDER_ID=your-student-sender-id
VITE_STUDENT_FIREBASE_APP_ID=your-student-app-id

# Employer Firebase Project
VITE_EMPLOYER_FIREBASE_API_KEY=your-employer-firebase-api-key
VITE_EMPLOYER_FIREBASE_AUTH_DOMAIN=your-employer-project.firebaseapp.com
VITE_EMPLOYER_FIREBASE_PROJECT_ID=your-employer-project-id
VITE_EMPLOYER_FIREBASE_STORAGE_BUCKET=your-employer-project.firebasestorage.app
VITE_EMPLOYER_FIREBASE_MESSAGING_SENDER_ID=your-employer-sender-id
VITE_EMPLOYER_FIREBASE_APP_ID=your-employer-app-id
VITE_EMPLOYER_FIREBASE_MEASUREMENT_ID=your-employer-measurement-id

# Admin Firebase Project
VITE_ADMIN_FIREBASE_API_KEY=your-admin-firebase-api-key
VITE_ADMIN_FIREBASE_AUTH_DOMAIN=your-admin-project.firebaseapp.com
VITE_ADMIN_FIREBASE_PROJECT_ID=your-admin-project-id
VITE_ADMIN_FIREBASE_STORAGE_BUCKET=your-admin-project.firebasestorage.app
VITE_ADMIN_FIREBASE_MESSAGING_SENDER_ID=your-admin-sender-id
VITE_ADMIN_FIREBASE_APP_ID=your-admin-app-id
VITE_ADMIN_FIREBASE_MEASUREMENT_ID=your-admin-measurement-id

# Firebase Service Account (for backend)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ================================
# REDIS CONFIGURATION (Optional)
# ================================

REDIS_URL=redis://localhost:6379

# ================================
# AI/ML API KEYS (Optional)
# ================================

OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# ================================
# SMS CONFIGURATION (Optional)
# ================================

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment
NODE_ENV=development
FLASK_ENV=development

# API URLs (for frontend)
VITE_API_URL=http://localhost:8001
VITE_EMPLOYER_API_URL=http://localhost:8000
VITE_RECOMMENDATION_API_URL=http://localhost:5000